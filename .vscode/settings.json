{
  "latex-workshop.latex.tools": [
    {
      "name": "ucasthesis",
      "command": "./artratex.sh",
      "args": [
        "x",
        "Thesis.tex"
      ]
    },
    {
      "name": "clean",
      "command": "rm",
      "args": [
        "-rf",
        "Tmp"
      ]
    },
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "%DOC%"
      ]
    },
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    },
    {
      "name": "bibtex",
      "command": "bibtex",
      "args": [
        "%DOCFILE%"
      ]
    }
  ],
  "latex-workshop.latex.recipes": [

    {
      "name": "ucasthesis",
      "tools": [
        "clean","ucasthesis"
      ]
    }
  ],
  "latex-workshop.latex.clean.enabled": true,
  "latex-workshop.latex.autoBuild.onSave.enabled": true,
  "editor.wordWrap": "on",
  "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": true,
  "latex-workshop.latex.autoBuild.onTexChange.enabled": true
}